<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".MainActivity"
        android:id="@+id/topBar"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:background="#ffffff">

        <ImageView
            android:id="@+id/imageViewT1"

            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:padding="@dimen/abc_action_bar_default_padding_material"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/recommend"
            android:layout_marginLeft="10dp"
            android:text="推薦"
            android:textSize="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

             />

        <TextView
            android:id="@+id/push"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="推播"
            android:textSize="30dp"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/login"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登入"
            android:textSize="30dp"
            android:layout_gravity="center"/>

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".MainActivity"
        android:id="@+id/centerTopBar"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/topBar"
        android:background="#f8f8ff">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="12"
            android:id="@+id/edit_text"
            android:hint="請輸入關鍵字" />

        <ImageButton
            android:id="@+id/searchButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/search"
            android:layout_margin="@dimen/abc_action_bar_default_padding_material" />

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".MainActivity"
        android:id="@+id/centerBar"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_above="@+id/bottomBar"
        android:layout_below="@+id/centerTopBar"
        android:background="#fffff0">

        <TableLayout
            android:id="@+id/user_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".MainActivity"
        android:id="@+id/bottomBar"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:background="#6495ed">

        <ImageButton
            android:id="@+id/cloth_button"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/abc_action_bar_default_padding_material"
            android:src="@drawable/cloth"
            android:background="@null" />

        <ImageButton
            android:id="@+id/cosmetic_button"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="3dp"
            android:padding="@dimen/abc_action_bar_default_padding_material"
            android:src="@drawable/makeup"
            android:background="@null" />

        <ImageButton
            android:id="@+id/bag_button"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/abc_action_bar_default_padding_material"
            android:src="@drawable/bag"
            android:background="@null" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:background="@null" />

    </LinearLayout>

</RelativeLayout>
